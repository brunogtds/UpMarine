<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="#ffff00"/>
            <stroke
                android:width="10dp"
                android:color="#ffff00"/>
            <corners
                android:radius="30dp"/>
            <padding
                android:bottom="50dp"
                android:left="50dp"
                android:right="50dp"
                android:top="50dp"/>
        </shape>

    </item>
    <item>
        <shape>
            <gradient
                android:angle="270"
                android:endColor="#ffff00"
                android:startColor="#ffff00"/>
            <stroke
                android:width="10dp"
                android:color="#ffff00"/>
            <corners
                android:radius="14dp"/>
            <padding
                android:bottom="50dp"
                android:left="50dp"
                android:right="50dp"
                android:top="50dp"/>
        </shape>
    </item>
</selector>